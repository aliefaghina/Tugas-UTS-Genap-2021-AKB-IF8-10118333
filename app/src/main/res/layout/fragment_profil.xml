<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app= "http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:src="@drawable/ghina1"
    app:civ_border_width="4dp"
    app:civ_border_color="@color/coklat"/>

   <TextView
       android:id="@+id/txt_biodata"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="145dp"
       android:text="BIODATA"
       android:textColor="@color/font_color"/>

    <TextView
        android:id="@+id/txt_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_biodata"
        android:textColor="@color/font_color"
        android:text="NIM         : 10118333"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/txt_nim"
        android:textColor="@color/font_color"
        android:text="NAMA     : Aliefa Ghina Syahidah"/>

    <TextView
        android:id="@+id/txt_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:textColor="@color/font_color"
        android:layout_below="@+id/txt_nama"
        android:text="NIM         : IF-8"/>


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/txt_kelas"
        android:textColor="@color/font_color"
        android:text="EMAIL     : ghinaaliefa@gmail.com"/>



</RelativeLayout>